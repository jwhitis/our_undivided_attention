<script src="https://player.vimeo.com/api/player.js"></script>
<script type="text/javascript">
  var video_id = 179668570;
  var video_player = new Vimeo.Player("video-player", {
    id: video_id,
    byline: false,
    color: "0197BA",
    portrait: false,
    title: false
  });

  $("img#still-frame").click(function() {
    $("div#video-overlay").fadeIn(100, function() {
      $("body").css("overflow-y", "hidden");
      video_player.play();
    });
  });

  function closeVideo() {
    $("div#video-overlay").fadeOut(100, function() {
      $("body").css("overflow-y", "auto");
      video_player.loadVideo(video_id);
    });
  }

  video_player.on("ended", closeVideo);
  $("div#video-overlay").click(closeVideo);
</script>